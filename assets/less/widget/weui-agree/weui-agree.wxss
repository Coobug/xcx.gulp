
@import "../../base/fn.wxss";

.weui-agree{
    display: block;
    padding: .5em 15px;
    font-size: 13px;
}
.weui-agree__text{
    color: @weuiTextColorGray;
}
.weui-agree__link{
    display: inline;
    color: @weuiLinkColorDefault;
}
.weui-agree__checkbox{
    position: absolute;
    left: -9999px;
}
.weui-agree__checkbox-icon{
    position: relative;
    top: 3px;
    display: inline-block;
    border: 1px solid #D1D1D1;
    background-color: #FFFFFF;
    border-radius: 3px;
    width: 14px;
    height: 14px;
}
.weui-agree__checkbox-icon-check{
    position: absolute;
    top: 1px;
    left: 1px;
}